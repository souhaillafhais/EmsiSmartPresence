<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/lightGray"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:minHeight="72dp">

        <!-- Avatar de l'Ã©tudiant -->
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/avatar_circle_background"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤"
                android:textSize="20sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <!-- Nom de l'Ã©tudiant - MÃŠME ID -->
        <TextView
            android:id="@+id/tv_student_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="16dp"/>

        <!-- Section prÃ©sence moderne -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- CheckBox remplacÃ© par un Toggle moderne mais avec mÃªme ID -->
            <CheckBox
                android:id="@+id/cb_presence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PrÃ©sent"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:buttonTint="@color/colorPrimary"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Ligne d'accent pour feedback visuel -->
    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_gravity="start"
        android:alpha="0"/>

</com.google.android.material.card.MaterialCardView>